{
  "name": "typescript_todo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "dev": "dotenvx run -f .env.local -- nodemon --exec TSX_DISABLE_CACHE=1 tsx --inspect=0.0.0.0:9229 'src/index.ts'",
    "test:local": "dotenvx run -f .env.test.local -- vitest",
    "test:container": "dotenvx run -f .env.test.container -- vitest",
    "pre-commit:prepare": "simple-git-hooks"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.4",
    "@prisma/adapter-mariadb": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "express": "^5.2.1",
    "mysql2": "^3.16.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.0",
    "prisma": "^7.2.0",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17",
    "vitest-mock-extended": "^3.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild@0.27.2",
      "@prisma/engines@7.2.0",
      "prisma@7.2.0",
      "unrs-resolver@1.11.1",
      "simple-git-hooks@2.13.1"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "cd backend && pnpm prettier -w . && pnpm eslint"
  }
}
